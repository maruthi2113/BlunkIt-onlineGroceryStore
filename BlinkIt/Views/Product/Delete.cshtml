@model Product

<form method="post" asp-action="Delete" enctype="multipart/form-data">
 
<div class="col-md-4">
    <div class="card shadow-sm">
        <img class="card-img-top" src="@Model.ImageUrl" width="100%" height="225" alt="Card image cap" />
        <div class="card-body">
            <p class="card-text">@Model.Name</p>
            <p class="card-text">@Model.Description</p>
            <p class="card-text">@Model.SubCategoryId</p>
            <p class="card-text">@Model.Price</p>
            <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                    @if (User.Identity.IsAuthenticated && User.IsInRole("admin"))
                    {
                        <a type="button" class="btn btn-sn btn-outline-primary" asp-action="Index">Back</a>
                      <button type="submit" class="btn btn-secondary">Delete</button>

                    }
                    else
                    {
                        <a type="button" class="btn btn-sn btn-outline-primary" asp-action="Index">Back</a>

                            <button type="submit" class="btn btn-secondary">Delete</button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
</form>