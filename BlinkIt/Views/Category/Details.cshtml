@model Category
@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>


    <div class="container">
        <div class="row">

            <div class="col-md-4">
                <div class="card shadow-sm">
                    <img class="card-img-top" src="@Model.ImageUrl" width="100%" height="225" alt="Card image cap" />
                    <div class="card-body">
                        <p class="card-text">@Model.Name</p>
                        <div class="d-flex justify-content-between align-items-center">
                            
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
